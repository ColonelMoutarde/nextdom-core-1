/* Theme base */

.content-wrapper {
background-color:{{ COLOR9 }};
}
.icon_theme_color {
color: {{ COLOR1 }};
}
.backgroundColor{
background-color: {{ COLOR1 }};
}

/* Logos & Header */
.logo-mini-img{
content:url("/public/img/NextDom/NextDom_Square_AlphaBlackWhite.png");
}
.logo-lg-img{
content:url("/public/img/NextDom/NextDom_Wide_AlphaBlackWhite.png");
}
.login-logo-img{
content:url("/public/img/NextDom/NextDom_Wide_AlphaBlackWhite.png");
}
.login-logo{
background-color: {{ COLOR1 }};
}
.main-header .logo {
background-color: {{ COLOR1 }};
color: {{ COLOR2 }};
border-bottom: 0 solid transparent;
}
.main-header .logo:hover {
background-color: {{ COLOR1 }};
}
.main-header li.user-header {
background-color: {{ COLOR1 }};
}
.content-header {
background: transparent;
}

/* Labels & Texts */
.text_color {
color: {{ COLOR1 }};
}
.label-config {
background-color: {{ COLOR1 }};
}
.Link-Blue {
color: {{ COLOR1 }};
}
.label-value, .label-icon {
background-color: #F5F5F5;
color: #000 !important;
border-color: #ddd
}
.label-unity, .label-unity-big {
color: #999 !important;
}
.label-list {
background-color: #fdfdf2;
color: #666 !important;
border-color: #ddd;
}
.label-view {
background-color: #fdfdf2;
color: #666 !important;
border-color: #ddd;
}
.label-log {
background-color: #fdfdf2;
color: #666 !important;
border-color: #ddd;
}

/* Checkbox */
[type="checkbox"]:not(:checked):before,
[type="checkbox"]:checked:before {
background: #fff;
}
[type="checkbox"]:not(:checked):after,
[type="checkbox"]:checked:after {
color: {{ COLOR4 }};
}
.has-error [type="checkbox"]:checked:after,
.has-error [type="checkbox"]:checked:after {
color: {{ COLOR4}};
}

/* buttons */
.btn-primary {
background-color: {{ COLOR1 }};
border-color: {{ COLOR1 }};
}
.btn-action {
background-color: #999;
color: {{ COLOR2 }};
border-color: #666;
}

/* Tabs */
.nav-tabs-custom>.nav-tabs>li.active {
border-top-color: {{ COLOR1 }}
}
/* Tables */
.table-condensed>thead {
background-color: #F5F5F5;
border-bottom: 1px solid #ddd;
border-top: 1px solid #ddd;
}
.table-condensed {
background-color: #fafafa;
}

/* Navs */
.main-header .navbar {
background-color: {{ COLOR1 }};
}
.main-header .navbar .nav > li > a {
color: #fff;
}
.main-header .navbar .nav > li > a:hover,
.main-header .navbar .nav > li > a:active,
.main-header .navbar .nav > li > a:focus,
.main-header .navbar .nav .open > a,
.main-header .navbar .nav .open > a:hover,
.main-header .navbar .nav .open > a:focus,
.main-header .navbar .nav > .active > a {
background: rgba(0, 0, 0, 0.1);
color: {{ COLOR3 }};
}
.main-header .navbar .sidebar-toggle {
color: {{ COLOR2 }};
}
.main-header .navbar .sidebar-toggle:hover {
color: {{ COLOR3 }};
background: rgba(0, 0, 0, 0.1);
}
.main-header .navbar .sidebar-toggle {
color: {{ COLOR2 }};
}
.main-header .navbar .sidebar-toggle:hover {
background-color: {{ COLOR1 }};
}
@media (max-width: 767px) {
.main-header .navbar .dropdown-menu li.divider {
background-color: rgba(255, 255, 255, 0.1);
}
.main-header .navbar .dropdown-menu li a {
color: {{ COLOR2 }};
}
.main-header .navbar .dropdown-menu li a:hover {
background: {{ COLOR1 }};
}
}
.dashMode {
color: {{ COLOR2 }};
}
.editionMode {
color: #000;
}

/* Sidebar */
.wrapper,
.main-sidebar,
.left-side {
background-color: {{ COLOR6 }};
}
.user-panel > .info,
.user-panel > .info > a {
color: {{ COLOR2 }};
}
.sidebar-menu > li.header {
color: {{ COLOR1 }};
background: #1a2226;
}
.sidebar-menu > li > a {
border-left: 3px solid transparent;
}
.sidebar-menu > li:hover > a, .sidebar-menu > li.menu-open > a {
color: {{ COLOR3 }};
background: {{ COLOR7 }};
border-left-color: {{ COLOR1 }};
}
.sidebar-menu > li > .treeview-menu {
margin: 0 1px;
background: {{ COLOR8 }};
}
.sidebar a {
color: {{ COLOR2 }};
}
.sidebar a:hover {
text-decoration: none;
}
.sidebar-menu .treeview-menu > li > a {
color: #8aa4af;
}
.sidebar-menu .treeview-menu > li.active > a,
.sidebar-menu .treeview-menu > li > a:hover {
color: {{ COLOR2 }};
}
.sidebar-form {
border-radius: 3px;
border: 1px solid #374850;
margin: 10px 10px;
}
.sidebar-form input[type="text"],
.sidebar-form .btn {
box-shadow: none;
background-color: #374850;
border: 1px solid transparent;
height: 35px;
}
.sidebar-form input[type="text"] {
color: #666;
border-top-left-radius: 2px;
border-top-right-radius: 0;
border-bottom-right-radius: 0;
border-bottom-left-radius: 2px;
}
.sidebar-form input[type="text"]:focus,
.sidebar-form input[type="text"]:focus + .input-group-btn .btn {
background-color: {{ COLOR2 }};
color: #666;
}
.sidebar-form input[type="text"]:focus + .input-group-btn .btn {
border-left-color: {{ COLOR2 }};
}
.sidebar-form .btn {
color: #999;
border-top-left-radius: 0;
border-top-right-radius: 2px;
border-bottom-right-radius: 2px;
border-bottom-left-radius: 0;
}
.main-header > .logo {
background-color: {{ COLOR1 }};
color: {{ COLOR2 }};
border-bottom: 0 solid transparent;
}
.main-header > .logo:hover {
background-color: {{ COLOR1 }};
}

/* Title */
.ui-dialog .ui-dialog-title{
color: {{ COLOR2 }};
}
.ui-dialog .ui-dialog-titlebar{
background-color: {{ COLOR1 }};
padding: 0px 15px;
}

/* Scrollbar */
::-webkit-scrollbar-thumb {
background:{{ COLOR1 }};
background-color: {{ COLOR1 }};
}

.fab-action-button {
background-color: {{ COLOR1 }};
}
