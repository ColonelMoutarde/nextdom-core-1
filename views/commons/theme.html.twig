  color: {{ COLOR1 }} !important;
}

.backgroundColor{
  background-color: {{ COLOR1 }} !important;
}

/* Fond logo page login */
.login-logo{
  background-color: {{ COLOR1 }} !important;
}

/* Header */
.main-header .logo {
  background-color: {{ COLOR1 }} !important;
  border-bottom: 0 solid transparent;
}
.main-header li.user-header {
  background-color: {{ COLOR1 }} !important;
}

/* Textes & labels */
.label-config {
  background-color: {{ COLOR1 }} !important;
}
.label-link {
  color: {{ COLOR1 }} !important;
}

/* Bouton primaires */
.btn-primary {
  background-color: {{ COLOR1 }} !important;
