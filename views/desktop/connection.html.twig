{% include '/commons/header.html.twig' %}
{% if CSS_POOL is defined %}
    {% for cssFile in CSS_POOL %}
        <script src="{{ cssFile }}"></script>
    {% endfor %}
{% endif %}
<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <img src="core/img/NextDom/NextDom_Wide_BlueAlphaBlack.png" style="height:100px; border-radius: 10px">
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">{{ 'connectez vous pour commencer votre session'}}</p>

        <form >
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="login" id="in_login_username">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Password" id="in_login_password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="passwd" id="div_twoFactorCode" style="display:none;">
                <input type="text" id="in_twoFactorCode">
                <label>{{ 'Code à 2 facteurs' }}</label>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck ">
                        <label>
                            <input type="checkbox" id="cb_storeConnection"> Enregister
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button class="btn btn-primary btn-block btn-flat" id="bt_login_validate">Connection</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <a href="#">{{ 'J\'ai oublié mon mot de pass' }}</a><br>

    </div>
    <!-- /.login-box-body -->
</div>

{% if JS_END_POOL is defined %}
    {% for jsFile in JS_END_POOL %}
        <script src="{{ jsFile }}"></script>
    {% endfor %}
{% endif %}

</body>

</html>