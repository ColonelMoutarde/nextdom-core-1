<section class="content-header">
    <div class="action-bar">
        <div class="action-group">
            <a class="btn btn-danger" href="index.php?v=d&p=administration"><i class="fas fa-chevron-left">&nbsp;&nbsp;</i>{{ 'Retour'}}</a>
        </div>
        <div class="action-group">
            <a class="btn btn-success" id="bt_addCron"><i class="fas fa-plus-circle">&nbsp;&nbsp;</i>{{ 'Ajouter' }}</a>
            <a class="btn btn-warning" id="bt_refreshCron"><i class="fas fa-refresh">&nbsp;&nbsp;</i>{{ 'Rafraîchir' }}</a>
            {% if cronEnabled == 0 %}
                <a class="btn btn-primary" id="bt_changeCronState" data-state="1"><i class="fas fa-check">&nbsp;&nbsp;</i>{{ 'Activer le système cron' }}</a>
            {% else %}
                <a class="btn btn-danger" id="bt_changeCronState" data-state="0"><i class="fas fa-times">&nbsp;&nbsp;</i>{{ 'Désactiver le système cron' }}</a>
            {% endif %}
        </div>
        <div class="action-group">
            <a class="btn btn-success pull-right" id="bt_save"><i class="fas fa-save">&nbsp;&nbsp;</i>{{ 'Sauvegarder' }}</a>
        </div>
    </div>
</section>

<section class="content">
    <div class="box" id="div_Cron">
        <!-- Header bar -->
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fas fa-tasks">&nbsp;&nbsp;</i>{{ 'Taches' }}</h3>
        </div>

        <!-- Page content -->
        <div class="box-body">
            <form class="form-horizontal">
                <fieldset>
                    <div>
                        <table id="table_cron" class="table table-bordered table-condensed text-center">
                            <thead>
                            <tr>
                                <th class="id">#</th>
                                <th data-sorter="false" data-filter="false"></th>
                                <th class="enable">{{ 'Actif' }}</th>
                                <th class="pid">{{ 'PID' }}</th>
                                <th class="deamons">{{ 'Démon' }}</th>
                                <th class="once">{{ 'Unique' }}</th>
                                <th class="class">{{ 'Classe' }}</th>
                                <th class="function">{{ 'Fonction' }}</th>
                                <th class="schedule">{{ 'Programmation' }}&nbsp;&nbsp;<i class="fas fa-question-circle cursor bt_pageHelp" data-name='cronSyntaxe'></i></th>
                                <th class="timeout">{{ 'Timeout (min)' }}</th>
                                <th class="lastRun">{{ 'Dernier lancement' }}</th>
                                <th class="runtime">{{ 'Dernière durée' }}</th>
                                <th class="state">{{ 'Statut' }}</th>
                                <th class="action" data-sorter="false" data-filter="false"></th>
                            </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</section>