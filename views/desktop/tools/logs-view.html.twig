<div class="box" id="div_Logs-view">
    <!-- Header bar -->
    <div class="box-header with-border">
        <h3 class="box-title"><i class="fas fa-file-alt">&nbsp;&nbsp;</i>{{ 'Logs' }}</h3>
        <div class="box-tools pull-right">
            <a class="pull-right btn-box-tool" href="index.php?v=d&p=administration"><i class="fa fa-times"></i></a>
        </div>
    </div>

    <!-- Page content -->
    <div class="box-body">
        <form class="form-horizontal">

            <div class="row row-overflow">
                <div class="col-md-3 col-sm-4" id="div_displayLogList">
                    <fieldset>
                        <legend class="legend-title">{{ 'Liste des logs' }}</legend>
                        <div class="bs-sidebar">
                            <ul id="ul_object" class="nav nav-list bs-sidenav">
                                <li class="filter" style="margin-bottom: 5px;"><input class="filter form-control input-sm" placeholder="{{ 'Rechercher' }}" style="width: 100%"/></li>
                                {% for logFile in logFilesList %}
                                    <li class="cursor label-log li_log{% if logFile['active'] %} active{% endif %}" data-log="{{ logFile['name'] }}">
                                        <i class="fa fa-{{ logFile['icon'] }}" style="float:left;margin-top:13px;color:{{ logFile['color'] }};">&nbsp;&nbsp;</i>
                                        <a>{{ logFile['name'] }} ({{ logFile['size'] }} Ko)</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </fieldset>
                </div>

                <div class="col-md-9 col-sm-8" style="border-left: solid 1px #EEE;">
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <a class="btn btn-danger pull-right" id="bt_removeAllLog"><i class="far fa-trash-alt">&nbsp;&nbsp;</i>{{ 'Supprimer tous' }}</a>
                            <a class="btn btn-danger pull-right" id="bt_removeLog"><i class="far fa-trash-alt">&nbsp;&nbsp;</i>{{ 'Supprimer' }}</a>
                            <a class="btn btn-warning pull-right" id="bt_clearLog"><i class="fas fa-times">&nbsp;&nbsp;</i>{{ 'Vider' }}</a>
                            <a class="btn btn-success pull-right" id="bt_downloadLog" disabled="disabled"><i class="fas fa-cloud-download-alt">&nbsp;&nbsp;</i>{{ 'Télécharger' }}</a>
                            <a class="btn btn-action pull-right" data-state="1" id="bt_globalLogStopStart"><i class="fas fa-pause">&nbsp;&nbsp;</i>{{ 'Pause' }}</a>
                            <input style="max-width: 150px;" class="form-control pull-right" id="in_globalLogSearch" placeholder="{{ 'Rechercher' }}"/>
                        </div>
                    </div>
                    <pre id='pre_globallog' style='overflow: scroll;'></pre>
                </div>
            </div>
        </form>
    </div>

    <!-- Footer bar -->
    <div class="box-footer clearfix">
        <a class="btn btn-danger pull-right" href="index.php?v=d&p=administration"><i class="fas fa-chevron-left">&nbsp;&nbsp;</i>{{ 'Retour' }}</a>
    </div>
</div>
