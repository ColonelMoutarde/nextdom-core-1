<div class="box blurPanel" id="div_Logs-view">
    <!-- Header bar -->
    <div class="box-header with-border">
        <h3 class="box-title"><i class="fas fa-file-alt">&nbsp;&nbsp;</i>{{ 'Logs' }}</h3>
    </div>

    <!-- Page content -->
    <div class="box-body">
        <form class="form-horizontal">

            <div class="row">
                <div class="col-md-3 col-sm-4 padding-bottom" id="div_displayLogList">
                    <fieldset>
                        <legend class="legend-title">{{ 'Liste des logs' }}</legend>
                        <div class="bs-sidebar">
                            <ul id="ul_object" class="nav nav-list bs-sidenav">
                                <li class="filter"><input class="filter form-control" placeholder="{{ 'Rechercher un log...' }}"/></li>
                                {% for logFile in logFilesList %}
                                    <li class="cursor label-log li_log{% if logFile['active'] %} active{% endif %}" data-log="{{ logFile['name'] }}">
                                        <i class="fas fa-{{ logFile['icon'] }}" style="float:left;margin-top:13px;color:{{ logFile['color'] }};">&nbsp;&nbsp;</i>
                                        <a>{{ logFile['name'] }} ({{ logFile['size'] }} Ko)</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </fieldset>
                </div>

                <div class="col-md-9 col-sm-8" style="border-left: solid 1px #EEE;">
                    <fieldset>
                        <div class="box-tools padding-bottom">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-search"></i></div>
                                <input class="form-control" id="in_globalLogSearch" placeholder="{{ 'Rechercher dans le log...' }}"/>
                            </div>
                        </div>
                        <pre id='pre_globallog' style='overflow: auto;min-height:215px;'></pre>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="fab">
    <span class="fab-action-button"><i class="fab-action-button__icon fas fa-bars"></i></span>
    <ul class="fab-buttons">
        <li class="fab-buttons__item"><a class="fab-buttons__link btn-warning" data-state="1" id="bt_globalLogStopStart" title="" data-tooltip="{{ 'Pause' }}"><i class="fas fa-pause"></i></a></li>
        <li class="fab-buttons__item"><a class="fab-buttons__link bg-green-active" id="bt_downloadLog" disabled="disabled" title="" data-tooltip="{{ 'Télécharger' }}"><i class="fas fa-cloud-download-alt"></i></a></li>
        <li class="fab-buttons__item"><a class="fab-buttons__link bg-orange-active" id="bt_clearLog" title="" data-tooltip="{{ 'Vider' }}"><i class="fas fa-times"></i></a></li>
        <li class="fab-buttons__item"><a class="fab-buttons__link bg-red-active" id="bt_removeLog" title="" data-tooltip="{{ 'Supprimer' }}"><i class="far fa-trash-alt"></i></a></li>
        <li class="fab-buttons__item"><a class="fab-buttons__link bg-red-active" id="bt_removeAllLog" title="" data-tooltip="{{ 'Supprimer tous' }}"><i class="far fa-trash-alt"></i></a></li>
    </ul>
</div>
<div class="fab fab-bis">
    <a class="fab-action-button bg-red-active" href="index.php?v=d&p=administration"><i class="fab-action-button__icon fas fa-chevron-left"></i></a>
</div>
