<div id="contenu" class="box">
    <div class="box-header with-border">
        <h3 class="box-title"><i class="fas fa-stop-circle">&nbsp;&nbsp;</i>{{ 'Arrêt en cours...' }}</h3>
    </div>
    <div class="box-body">
        <fieldset>
            <div class="progress">
                <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" id="progressbar_reboot" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                    <span class="sr-only"></span>
                </div>
            </div>
            <div id="div_reboot_nextdom_text">{{ 'Merci de patienter...' }}</div>
        </fieldset>
    </div>
</div>
<iframe src="" id="iframe_reboot" style="display:none"></iframe>
<div id="div_reboot_nextdom" style="display:none;">
    <script type="text/javascript" id="reboot_nextdom"></script>
</div>
<script type="text/javascript">
    var rebooti = '0';
    var testnextdom = '0';
    nextdom.haltSystem();

    function reboot_nextdom(rebooti){
        $('#div_reboot_nextdom_text').empty().html('{{ 'Votre box' }} '+NEXTDOM_PRODUCT_NAME+' {{ 'est éteinte. Pour la redémarrer, débranchez-la et rebranchez-la...' }}');
        $('#progressbar_reboot').width('100%');
        $('#progressbar_reboot').addClass('progress-bar-danger').removeClass('progress-bar-success').removeClass('active');
    }

    setTimeout('reboot_nextdom(rebooti)', 10000);
    setTimeout("$('#progressbar_reboot').width('50%');", 5000);
    $('#progressbar_reboot').width('5%');
</script>
